public class TidalNV extends JavaPlugin {
	@Override
	public void onEnable() {
		getLogger().info("[TidalNV] Tidal NightVision");
	}

	@Override
	public void onDisable() {

	}

	public boolean onCommand(CommandSender sender, Command cmd, String commandLabel, String[] args) {
		if (commandLabel.equalsIgnoreCase("nv")) {
			Player player = (Player) sender;
			if (player.hasPermission("tidalyt.nv")) {
				    player.sendMessage("There UUID Is >>" + Bukkit.getPlayer(args[0]).getUniqueId());
			} else {
				
			}
		} else {
			if (commandLabel.equalsIgnoreCase("nvoff")) {
				Player player = (Player) sender;
				if (player.hasPermission("tidalyt.nvoff")) {
					    player.sendMessage(ChatColor.GREEN + "You have removed Night Vision!");
					    player.removePotionEffect(PotionEffectType.NIGHT_VISION);
				} else {
					player.sendMessage(ChatColor.RED + "You don't have permission!");
				}
				
			}
		}
		

		return false;

	}
}
